<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/list_divider_background"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    >

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/colorBorder"
        app:layout_constraintBottom_toBottomOf="@id/tvGrName"
        app:layout_constraintEnd_toStartOf="@id/tvGrName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvGrName"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/colorBorder"
        app:layout_constraintBottom_toBottomOf="@id/tvGrName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvGrName"
        app:layout_constraintTop_toTopOf="@id/tvGrName"
        />

    <TextView
        android:id="@+id/tvGrName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:textColor="@android:color/black"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Название категории"
        />

</android.support.constraint.ConstraintLayout>